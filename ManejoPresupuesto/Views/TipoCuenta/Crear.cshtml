@model TipoCuenta

@{
    ViewData["Title"] = "Crear Tipo de Cuenta";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="card-title">Crear tipo de cuenta</h1>
                    <h6 class="card-subtitle mb-2 text-muted">El tipo de cuenta se refiere a cómo podemos agrupar cuentas. Ejemplos: Préstamos, tarjetas de crédito, etc.</h6>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <form asp-action="Crear">
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre</label>
                            <input type="text" asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre del tipo de cuenta">
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Enviar</button>
                        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
