@model TipoCuenta

@{
    ViewData["Title"] = "Borrar Tipo de Cuenta";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    Confirmación de Eliminación
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title mb-4">¿Está seguro que desea borrar?</h5>
                    <p class="card-text">Esta acción es irreversible y borrará toda la información relacionada con el tipo de cuenta <strong>@Model.Nombre</strong>.</p>
                    
                    <form asp-action="BorrarTipoCuenta" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Borrar</button>
                        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
